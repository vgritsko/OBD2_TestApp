<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spa.obd2_testapp.MainActivity">

    <TableLayout
    android:layout_width="0dp"
    android:layout_height="495dp"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">
        android:orientation="vertical"


    <TableRow>


        <TextView
            android:id="@+id/mafTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connection status" />

        <TextView
            android:id="@+id/mafTvValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="0" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="gr/sec" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="01 42" />

        <ImageView


            android:id="@+id/conectionStatusImageView"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/bullet_red"
            tools:layout_editor_absoluteX="336dp"
            tools:layout_editor_absoluteY="8dp" />


    </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/rpmTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RPM"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="46dp" />

            <TextView
                android:id="@+id/rpmTvValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                tools:layout_editor_absoluteX="107dp"
                tools:layout_editor_absoluteY="53dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rpm" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="01  0C" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/speedTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed"
                />

            <TextView
                android:id="@+id/speedTvValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="km/h" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="01 0D" />

        </TableRow>




        <TableRow>

            <TextView
                android:id="@+id/throtlleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Throtlle"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="148dp" />

            <TextView
                android:id="@+id/throtlleTvValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="01 11" />

        </TableRow>


        <TableRow>

            <TextView
                android:id="@+id/textviewIp1"
                android:text="IP 1"/>

            <EditText
                android:id="@+id/editTextIp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textUri"
                android:text="192.168.0.1"
                android:textSize="10sp" />




        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textviewPort1"
                android:text="Port"/>

            <EditText
                android:id="@+id/edittextPort1"
                android:text="1000"
                android:textSize="10sp" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textviewIp2"
                android:text="IP 2"/>

            <EditText
                android:id="@+id/editTextIp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textUri"
                android:text="192.168.0.2"
                android:textSize="10sp" />

        </TableRow>



        <TableRow>

            <TextView
                android:id="@+id/textviewPort2"
                android:text="Port"/>

            <EditText
                android:id="@+id/edittextPort2"
                android:text="1000"
                android:textSize="10sp" />

        </TableRow>





        <TableRow>

            <Button
                android:id="@+id/startButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onButtonStart_Click"
                android:text="START"
               />

            <Button
                android:id="@+id/stopButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onButtonStop_Click"
                android:text="STOP" />




        </TableRow>


    </TableLayout>






</android.support.constraint.ConstraintLayout>
